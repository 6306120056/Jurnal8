package bilangan.fibbonacuk;

/**
 *
 * @author Asisten
 */
import java.io.* ;
import java.util.Scanner;
public class BilanganFucktorial {
    public static void main(String[] args){
    String input = "";
        int i, jlh = 1;
        
        Scanner m = new Scanner( System.in ) ;
        System.out.print("Input bilangan n!, n : ");
        System.out.print("");    
        
        int a = m.nextInt() ;
        System.out.print("Penyelesaian faktorial\n" + a + "! = ");
        if (a < 1) {
            System.out.println("Silahkan masukkan angka lebih besar dari 0");
        } else {
            for (i = 1; i <= a; i++) {
                System.out.print(i);
                if (i < a) {
                    System.out.print(" x ");
                }
                jlh = jlh * i;
            }
            System.out.println("\n   = " + jlh);
}
    }
}
    
